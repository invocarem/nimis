{
  "name": "nimis",
  "displayName": "Nimis - AI Prototyping",
  "description": "AI prototyping assistant powered by llama.cpp / vLLM",
  "version": "0.0.15",
  "publisher": "dashtotherock",
  "repository": {
    "type": "git",
    "url": "https://github.com/dashtotherock/nimis.git"
  },
  "bugs": {
    "url": "https://github.com/dashtotherock/nimis/issues"
  },
  "homepage": "https://github.com/dashtotherock/nimis#readme",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "AI",
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nimis-sidebar",
          "title": "Nimis AI",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "nimis-sidebar": [
        {
          "type": "webview",
          "id": "nimis.chatView",
          "name": "Chat",
          "icon": "media/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "nimis.openChat",
        "title": "Nimis: Open Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "nimis.insertCode",
        "title": "Nimis: Insert Code at Cursor",
        "icon": "$(insert)"
      },
      {
        "command": "nimis.explainCode",
        "title": "Nimis: Explain Selected Code",
        "icon": "$(question)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "nimis.explainCode",
          "when": "editorHasSelection",
          "group": "nimis"
        }
      ]
    },
    "configuration": {
      "title": "Nimis",
      "properties": {
        "nimis.serverType": {
          "type": "string",
          "default": "llama",
          "enum": ["llama", "vllm"],
          "enumDescriptions": [
            "llama.cpp server (default port 8080)",
            "vLLM server with OpenAI-compatible API (default port 8000)"
          ],
          "description": "Type of LLM server backend to connect to"
        },
        "nimis.serverUrl": {
          "type": "string",
          "default": "",
          "description": "URL of the LLM server (llama.cpp default: http://localhost:8080, vLLM default: http://localhost:8000)"
        },
        "nimis.llamaServerUrl": {
          "type": "string",
          "default": "",
          "description": "Deprecated: use nimis.serverUrl instead",
          "deprecationMessage": "This setting is deprecated. Please use nimis.serverUrl instead."
        },
        "nimis.mcpServers": {
          "type": "array",
          "description": "List of MCP servers for the nimis extension.",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Server name"
              },
              "command": {
                "type": "string",
                "description": "Command to start the server"
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Arguments for the command"
              },
              "type": {
                "type": "string",
                "description": "Connection type (e.g., stdio)"
              },
              "enabled": {
                "type": "boolean",
                "description": "Whether the server is enabled"
              },
              "timeout": {
                "type": "number",
                "description": "Timeout in seconds",
                "default": 60
              }
            },
            "required": [
              "name",
              "command",
              "args",
              "type",
              "enabled"
            ]
          },
          "default": []
        },
        "nimis.model": {
          "type": "string",
          "default": "",
          "description": "Model name or path (optional)"
        },
        "nimis.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Sampling temperature"
        },
        "nimis.maxTokens": {
          "type": "number",
          "default": 2048,
          "minimum": 1,
          "maximum": 32768,
          "description": "Maximum tokens to generate"
        },
        "nimis.rules": {
          "type": "array",
          "description": "Custom rules for the nimis extension.",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Rule identifier"
              },
              "description": {
                "type": "string",
                "description": "Description of the rule"
              },
              "enabled": {
                "type": "boolean",
                "description": "Whether the rule is enabled",
                "default": true
              },
              "config": {
                "type": "object",
                "description": "Custom configuration for the rule"
              }
            },
            "required": [
              "id",
              "description"
            ]
          },
          "default": []
        },
        "nimis.rulesPaths": {
          "type": "array",
          "description": "Paths to rule files for the nimis extension.",
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string",
                "description": "Absolute or workspace-relative path to the rule file."
              },
              "enabled": {
                "type": "boolean",
                "description": "Whether this rule file is enabled.",
                "default": true
              }
            },
            "required": [
              "path"
            ]
          },
          "default": []
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "pretest": "npm run compile",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:client": "jest",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^18.x",
    "@types/sinon": "^17.0.0",
    "@types/vscode": "^1.84.0",
    "@types/webpack-env": "^1.18.8",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^8.x",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^28.0.0",
    "mock-require": "^3.0.3",
    "rewire": "^9.0.1",
    "sinon": "^18.0.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.x",
    "webpack": "^5.105.2",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
