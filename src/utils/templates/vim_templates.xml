<!-- Create and edit a file -->
<!-- i command: turn to insert mode at current cursor position -->
<!-- o command: open a new line below the current line -->
<tool_call name="vim_edit">
  <file_path>src/components/Button.tsx</file_path>
  <commands><![CDATA[
iimport React from 'react';
o
ointerface ButtonProps {
o  label: string;
o  onClick: () => void;
o}
o
oexport const Button: React.FC<ButtonProps> = ({ label, onClick }) => {
o  return <button onClick={onClick}>{label}</button>;
o};
:w
]]></commands>
</tool_call>

